<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.futanium.iptv" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- TV antiga: Leanback NÃO é obrigatório -->
    <uses-feature android:name="android.software.leanback" android:required="false" />

    <application
        android:label="Futanium IPTV Lite"
        android:icon="@android:drawable/sym_def_app_icon"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="Canais">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <!-- REMOVER o LEANBACK_LAUNCHER -->
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".PlayerActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Player"/>
    </application>
</manifest>