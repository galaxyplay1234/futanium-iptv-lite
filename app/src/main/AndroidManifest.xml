<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.futanium.iptv" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-feature android:name="android.software.leanback" android:required="false"/>

    <application
        android:label="Futanium IPTV Lite"
        android:icon="@android:drawable/sym_def_app_icon"
        android:hardwareAccelerated="false"   
        android:vmSafeMode="true"             <!-- Modo Dalvik seguro -->
        android:largeHeap="true"              <!-- Folga extra de RAM -->
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="Canais"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Diagnóstico: deixe DESABILITADO por enquanto.
             Quando a lista abrir estável, reative removendo android:enabled="false" -->
        <activity
            android:name=".PlayerActivity"
            android:enabled="false"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Player"/>
    </application>
</manifest>